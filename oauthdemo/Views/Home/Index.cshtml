@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<IdentityUser> signInManager;
@{
    var ExternalSignIns = (await signInManager.GetExternalAuthenticationSchemesAsync()).ToList();
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <form action="/externallogin" method="post">
        @foreach(var provider in ExternalSignIns)
        {
            <button type="submit" name="provider">@provider.Name</button>
        }
    </form>
</div>
